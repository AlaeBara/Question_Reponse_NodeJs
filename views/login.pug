doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login
        link(rel="stylesheet", href="style.css")
    body 
        h1 login page 
        form(action="/login_auth",method="POST")
            label Email: 
            input(type="email",name="email", required=true ,class='inp')
            label Password: 
            input(type="password",name="password", required=true ,class='inp')
            .submit
                input(type="submit", value="submit")
            .message 
                p=messages
        .registre
            a(href="/registre") registre